<h1>Real-Time Products</h1>

<section>
  <h3>Crear producto</h3>
  <form id="createForm">
    <input name="title" placeholder="Título" required>
    <input name="price" type="number" min="0" step="0.01" placeholder="Precio" required>
    <button type="submit">Crear</button>
  </form>
</section>

<section style="margin-top:10px">
  <h3>Eliminar producto</h3>
  <form id="deleteForm">
    <input name="pid" placeholder="ID del producto" required>
    <button type="submit">Eliminar</button>
  </form>
</section>

<hr>
<h2>Listado (se actualiza por WebSocket)</h2>
<ul id="list">
  {{#each products}}
    <li data-id="{{this.id}}"><strong>{{this.title}}</strong> — $ {{this.price}} (id: {{this.id}})</li>
  {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/realtime.js"></script>
